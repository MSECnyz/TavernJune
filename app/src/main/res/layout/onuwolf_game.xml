            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:clipChildren="false"
            android:translationZ="1dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">
            <LinearLayout
                android:clipChildren="false"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="60dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/audiochat"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:text="按\n住\n讲\n话"/>
                    <Button
                        android:id="@+id/abchat"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="发送文字"/>
                    <Button
                        android:id="@+id/wolfgame_exit"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="退出"/>
                </LinearLayout>

                <LinearLayout
                    android:clipChildren="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:translationZ="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="bottom"
                            android:id="@+id/centercard2"
                            android:layout_width="80dp"
                            android:layout_height="45dp" />
                        <ImageView
                            android:layout_marginLeft="3dp"
                            android:layout_gravity="bottom"
                            android:id="@+id/centercard3"
                            android:layout_width="80dp"
                            android:layout_height="45dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:translationZ="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="52dp"
                            android:id="@+id/centercard1"
                            android:layout_width="80dp"
                            android:layout_height="45dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/game_msg_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:translationZ="2dp"
            android:clipChildren="false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
