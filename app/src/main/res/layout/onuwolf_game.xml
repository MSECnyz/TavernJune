                    android:id="@+id/player1"
                    android:layout_width="80dp"
                    android:layout_height="45dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/playerLLL9"
                android:orientation="vertical"
